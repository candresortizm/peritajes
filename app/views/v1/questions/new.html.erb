<h1>New Questions</h1>

<%= form_for @question, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <%= f.text_field :text_query %>
  <%= f.text_field :question_type %>
  <%= f.select "question_category_id", options_from_collection_for_select(@categories, "id", "name") %>
  <%= f.submit "Crear" %>
<% end %>

