<h1>New Benchmark</h1>

<%= form_tag create_benchmark_path, method: :post, id: "benchmark_form", multipart: true do %>
  <%@questions.each do |question_category|%>
    <h3><%=question_category[0].name%></h3>
    <%question_category[1].each do |question|%>
      <h3><%=question.text_query%></h3>
      <%case question.question_type%>
      <%when "range"%>
        <label for="male">PÃ©simo</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="0"><br>
        <label for="male">Malo</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="1"><br>
        <label for="male">Aceptable</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="2"><br>
        <label for="male">Bueno</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="3"><br>
      <%when "yes_or_no"%>
        <label for="male">Si</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="1"><br>
        <label for="male">No</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="3"><br>
      <%when "yes_no_na"%>
        <label for="male">Si</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="1"><br>
        <label for="male">No</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="3"><br>
        <label for="male">No aplica</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="0"><br>
      <%when "good_bad"%>
        <label for="male">Si</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="1"><br>
        <label for="male">No</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="3"><br>
      <%when "good_bad_na"%>
        <label for="male">Si</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="1"><br>
        <label for="male">No</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="3"><br>
        <label for="male">No aplica</label>
        <input type="radio" name="<%="answers[#{question_category[0].name}][#{question.key}]"%>" id="<%="answers[#{question_category[0].name}][#{question.key}]"%>" value="0"><br>
      <%else%>
        <label><%=question.question_type%></label>
      <%end%>
    <%end%>
    <label> Comentarios para <%= question_category[0].name %> </label>
    <textarea class="form-control" name='comment_<%= "question_category[0].id" %>' rows="6"></textarea>
    <hr>
  <%end%>
  <%= submit_tag("Finalizar") %>
<% end %>

